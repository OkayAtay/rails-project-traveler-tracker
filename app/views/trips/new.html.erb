<div class="row">
  <div class="column">
    <div class="info-text">
      <h1> Create Your Trip</h1> </br>
    </div>
  </div>
  <div class="column">
    <div class="form">
      <%= form_for @trip, url: traveler_trips_path do |f| %>
        <%=f.hidden_field :traveler_id%>
        Trip Name:
        <%= f.text_field :name %> </br>
        Trip Start Date: <%= f.datetime_select :start_date %></br>
        Trip End Date: <%= f.datetime_select :end_date%></br>
        (Add ability to either select an attraction or add your own)</br>
        Add Existing Attraction: <%=f.collection_select :attraction_id, Attraction.all, :id, :name %> </br>
        Add New Attraction: </br>
        <%=f.fields_for :attractions, @trip.attractions.build do |attraction_fields|%>
          Name: <%=attraction_fields.text_field :name %>
          Location: <%=attraction_fields.text_field :location %>
          Hours: <%=attraction_fields.text_field :hours %>
          Price: <%=attraction_fields.text_field :price %>
        <%end%>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
