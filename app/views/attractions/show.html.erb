<div class="row">
  <div class="column">
    <div class="info-text">
      <h1 id="attractionName"><%=@attraction.name%></h1>
      <!-- <h1> <%=@attraction.name%></h1> </br> -->
    </div>
  </div>
  <div class="column" id="attractions">
    <div class="form" id="attractionResults">
      <h2 id="attractionLocation">Location: <p><%=@attraction.location%></p></h2>
      <h2 id="attractionHours">Hours: <p><%=@attraction.hours%></p></h2>
      <h2 id="attractionPrice">Price: <p><%=@attraction.price%></p></h2>
      <div><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></div>
      <div><%= link_to "Delete Attraction", attraction_path(@attraction), :method => :delete %></div>
      <div><a href="#" class="js-next" data-id="<%=@attraction.id%>">Next Attraction</a></div>

    </div>

</div>
